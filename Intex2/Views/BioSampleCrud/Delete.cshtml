@model Intex2.Models.BiologicalSample

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">

    <!-- Delete a specific bio sample related to a burial id -->

    <h1>Delete Confirmation</h1>

    <h3>Are you sure you want to delete this sample?</h3>
</div>

<hr />
<div class="row justify-content-md-center">

    <div class="card text-center  shadow-sm col-md-3 m-1 p-1">
        <div class="card-header">
            <h5>Sample Rack: @Model.Rack</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">
                @Model.Notes
            </h5>
            <p class="card-text">
                Initials: @Model.Initials
            </p>
            <form asp-action="Delete">
                <div class="row justify-content-md-center">
                    <input type="submit" value="Delete" class="btn btn-danger m-1" />
                    <a class="btn btn-secondary m-1" asp-action="RecordSpecificIndex" asp-route-id="@Model.BurialId">Back to List</a>
                </div>
                </form>
        </div>
        <div class="card-footer text-muted">Date: @Model.Date </div>
    </div>
</div>

  
    
